<div class="p-6">
  <h2><span class="font-extrabold text-4xl bg-gradient-to-r from-violet-400 to-purple-800 text-transparent bg-clip-text">Log in</span></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "w-1/3 rounded-full border-2 border-pink-200 focus:border-purple-400 bg-white/70 text-left text-lg py-2 px-2 focus:outline-none focus:ring-0", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "w-1/3 rounded-full border-2 border-pink-200 focus:border-purple-400 bg-white/70 text-left text-lg py-2 px-2 focus:outline-none focus:ring-0", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "border-2 border-pink-200 focus:border-purple-400 bg-white/70" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions py-3">
      <%= f.submit "Log in", class: "bg-gradient-to-r from-purple-400 to-pink-400 hover:from-purple-500 hover:to-pink-500 text-white font-bold py-3 px-12 rounded-full text-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>