<div class="p-4">
<% @profiles.each do |t| %>
  <div class="py-1">
    <%= link_to "#{t.name}さんのプロフィール（#{t.created_at}）", profile_path(t.public_uid), class: "underline" %>
    <%if user_signed_in? %>
      <%= link_to t('.edit'), edit_profile_path(t),
          class: "inline-block bg-gradient-to-r from-purple-400 to-pink-500 hover:from-purple-500 hover:to-pink-600 text-white font-bold text-l py-1 px-3 rounded-2xl shadow-md transform transition-all duration-300 hover:scale-110 no-underline" %> 
      <%= link_to t('.destroy'), profile_path(t), method: :delete, data: { confirm: "#{t.name}さんのプロフィールを削除してもよろしいですか？" },
          class: "inline-block bg-gradient-to-r from-purple-400 to-pink-500 hover:from-purple-500 hover:to-pink-600 text-white font-bold text-l py-1 px-3 rounded-2xl shadow-md transform transition-all duration-300 hover:scale-110 no-underline" %>
    <% end %>
  </div>
<% end %>
<div class="p-4">