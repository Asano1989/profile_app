<div class="h-screen-minus-header bg-gradient-to-br from-pink-200 via-pink-100 to-purple-200 relative overflow-hidden">
<!-- 装飾的な背景要素 -->
<div class="absolute inset-0 overflow-hidden pointer-events-none">
  <!-- 浮遊する装飾アイコン -->
  <!-- 左上エリア -->
  <div class="absolute top-8 left-4 sm:top-12 sm:left-8 md:top-16 md:left-16 text-pink-300 opacity-50 animate-bounce">
    <span class="text-xl sm:text-2xl md:text-3xl">🌸</span>
  </div>
  
  <!-- 右上エリア -->
  <div class="absolute top-12 right-4 sm:top-20 sm:right-8 md:top-32 md:right-20 text-purple-300 opacity-60 animate-pulse">
    <span class="text-lg sm:text-xl md:text-2xl">💖</span>
  </div>
  
  <!-- 左中央エリア -->
  <div class="absolute top-1/4 left-8 sm:left-12 md:left-1/4 text-pink-300 opacity-40 animate-ping">
    <span class="text-base sm:text-lg md:text-xl">✨</span>
  </div>
  
  <!-- 右中央エリア -->
  <div class="absolute top-1/3 right-8 sm:right-12 md:right-1/4 text-purple-300 opacity-50 animate-bounce" style="animation-delay: 0.5s;">
    <span class="text-lg sm:text-xl md:text-2xl">🦄</span>
  </div>
  
  <!-- 左下エリア -->
  <div class="absolute bottom-1/3 left-4 sm:left-8 md:left-20 text-pink-300 opacity-60 animate-pulse" style="animation-delay: 1s;">
    <span class="text-base sm:text-lg md:text-xl">🌙</span>
  </div>
  
  <!-- 右下エリア -->
  <div class="absolute bottom-16 right-4 sm:bottom-20 sm:right-8 md:right-16 text-purple-300 opacity-40 animate-bounce" style="animation-delay: 1.5s;">
    <span class="text-lg sm:text-xl md:text-2xl">⭐</span>
  </div>
  
  <!-- 追加の装飾要素 -->
  <div class="absolute top-1/2 left-2 sm:left-4 md:left-10 text-pink-300 opacity-30 animate-pulse" style="animation-delay: 2s;">
    <span class="text-sm sm:text-base md:text-lg">🎀</span>
  </div>
  
  <div class="absolute bottom-1/2 right-2 sm:right-4 md:right-10 text-purple-300 opacity-50 animate-ping" style="animation-delay: 2.5s;">
    <span class="text-base sm:text-lg md:text-xl">💫</span>
  </div>
</div>

  <!-- メインコンテンツ -->
  <div class="h-full relative z-10 flex flex-col items-center justify-center px-4 py-8 sm:px-6 md:px-8">
    <!-- ヘッダー部分 -->
    <div class="text-center mb-8 sm:mb-10 md:mb-12">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent mb-4 sm:mb-6 md:mb-8 leading-tight">
        <span class="block sm:inline"><%= t('.main_title') %></span>
      </h1>
    </div>

    <% if !user_signed_in? %>
    <!-- メインボタン -->
    <div class="text-center mb-2 sm:mb-3 w-full max-w-md">
      <%= link_to new_user_registration_path, class: "block w-full bg-gradient-to-r from-purple-400 to-pink-400 hover:from-purple-500 hover:to-pink-500 text-white font-bold text-lg sm:text-xl md:text-2xl py-4 sm:py-5 md:py-6 px-6 sm:px-8 md:px-10 lg:px-16 rounded-2xl sm:rounded-3xl shadow-xl transform transition-all duration-300 hover:scale-105 active:scale-95 hover:shadow-purple-500/25 no-underline" do %>
        <span class="flex items-center justify-center gap-2 sm:gap-3">
          <span><%= t('.sign_up') %></span>
        </span>
      <% end %>
    </div>

    <!-- ユーザー登録・ログインボタン -->
    <div class="text-center mb-3 w-full max-w-md">
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <%= link_to link_to t('.login'), new_user_session_path, class: "w-full sm:w-auto inline-block bg-gradient-to-r from-violet-300 to-purple-300 hover:from-purple-400 hover:to-pink-400 text-purple-800 hover:text-white font-bold text-sm sm:text-base py-3 px-4 sm:px-6 rounded-xl sm:rounded-2xl shadow-md transform transition-all duration-300 hover:scale-105 active:scale-95 no-underline"%>
      </div>
    </div>

    <div class="text-center mt-3 mb-4 w-full max-w-md">
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
        <%= link_to t('.create_profile'), new_profile_path, class: "w-full sm:w-auto inline-block bg-gradient-to-r from-violet-300 to-purple-300 hover:from-purple-400 hover:to-pink-400 text-purple-800 hover:text-white font-bold text-sm sm:text-base py-3 px-4 sm:px-6 rounded-xl sm:rounded-2xl shadow-md transform transition-all duration-300 hover:scale-105 active:scale-95 no-underline" %>
      </div>
    </div>
    <% elsif %>
    <!-- メインボタン -->
    <div class="text-center mb-2 sm:mb-3 w-full max-w-md">
      <%= link_to new_profile_path, class: "block w-full bg-gradient-to-r from-purple-400 to-pink-400 hover:from-purple-500 hover:to-pink-500 text-white font-bold text-lg sm:text-xl md:text-2xl py-4 sm:py-5 md:py-6 px-6 sm:px-8 md:px-10 lg:px-16 rounded-2xl sm:rounded-3xl shadow-xl transform transition-all duration-300 hover:scale-105 active:scale-95 hover:shadow-purple-500/25 no-underline" do %>
        <span class="flex items-center justify-center gap-2 sm:gap-3">
          <span class="text-xl sm:text-2xl animate-pulse">✨</span>
          <span><%= t('.create_profile') %></span>
          <span class="text-xl sm:text-2xl animate-pulse">✨</span>
        </span>
      <% end %>
    <% end %>

    <!-- 装飾的な下部要素 -->
    <div class="absolute bottom-4 sm:bottom-6 md:bottom-8 left-1/2 transform -translate-x-1/2">
      <div class="flex gap-2 sm:gap-3 text-lg sm:text-xl md:text-2xl opacity-60">
        <span class="animate-bounce text-pink-400">🌸</span>
        <span class="animate-pulse text-purple-400">💖</span>
        <span class="animate-ping text-pink-400">✨</span>
        <span class="animate-pulse text-purple-400">💖</span>
        <span class="animate-bounce text-pink-400">🌸</span>
      </div>
    </div>
  </div>
</div>
